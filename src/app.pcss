@import url('https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/static/pretendard.min.css');

@tailwind base;
@tailwind components;
@tailwind utilities;

.ProseMirror {
  @apply min-h-[200px] rounded-lg border border-gray-300 p-4;
}

.ProseMirror:focus {
  @apply rounded-lg border-2 border-primary-500 shadow-[0_0_8px_rgba(107,70,193,0.5)] outline-none transition duration-200;
}
